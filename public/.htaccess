# Ensure existing files (JS, CSS, etc.) are served as static — avoid 500 when parent rewrites to PHP
<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	# Редирект /path/index.html -> /path/ (один URL для Google, без дублей)
	RewriteCond %{THE_REQUEST} \s/index\.html [NC]
	RewriteRule ^ / [R=301,L]
	RewriteCond %{THE_REQUEST} \s/(.+)/index\.html [NC]
	RewriteRule ^ /%1/ [R=301,L]
	# Не отдавать статику в PHP: запросы к /assets/ — только как файлы
	RewriteRule ^assets/ - [L]
	RewriteCond %{REQUEST_FILENAME} -f
	RewriteRule ^ - [L]
	RewriteCond %{REQUEST_FILENAME} -d
	RewriteRule ^ - [L]
</IfModule>

# Optimize cache for static assets (fixes Google PageSpeed "ineffective cache period" warning)
<IfModule mod_expires.c>
	ExpiresActive On
	# CSS and JavaScript
	ExpiresByType text/css "access plus 1 year"
	ExpiresByType application/javascript "access plus 1 year"
	ExpiresByType text/javascript "access plus 1 year"
	# Images - all formats
	ExpiresByType image/webp "access plus 1 year"
	ExpiresByType image/svg+xml "access plus 1 year"
	ExpiresByType image/png "access plus 1 year"
	ExpiresByType image/jpeg "access plus 1 year"
	ExpiresByType image/jpg "access plus 1 year"
	ExpiresByType image/gif "access plus 1 year"
	ExpiresByType image/ico "access plus 1 year"
	ExpiresByType image/x-icon "access plus 1 year"
	# Fonts - all formats
	ExpiresByType font/woff2 "access plus 1 year"
	ExpiresByType font/woff "access plus 1 year"
	ExpiresByType font/ttf "access plus 1 year"
	ExpiresByType font/otf "access plus 1 year"
	ExpiresByType font/eot "access plus 1 year"
	ExpiresByType application/font-woff "access plus 1 year"
	ExpiresByType application/font-woff2 "access plus 1 year"
	# Other static assets
	ExpiresByType application/json "access plus 1 month"
	ExpiresByType application/xml "access plus 1 month"
	ExpiresByType text/xml "access plus 1 month"
</IfModule>
<IfModule mod_headers.c>
	# CSS, JS, images, fonts - long cache with immutable flag
	<FilesMatch "\.(css|js|webp|svg|png|jpg|jpeg|gif|ico|woff2?|ttf|otf|eot)$">
		Header set Cache-Control "public, max-age=31536000, immutable"
	</FilesMatch>
	# JSON, XML - shorter cache (may change more often)
	<FilesMatch "\.(json|xml)$">
		Header set Cache-Control "public, max-age=2592000"
	</FilesMatch>
</IfModule>
